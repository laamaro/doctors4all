<div class="appointment-container container py-5 mt-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white form-card p-3 shadow">
        <h4 class="text-center mt-3">Edite seu tratamento</h4>
        <%= simple_form_for @treatment do |f| %>
          <%= f.input :specialty, :label => "Especialidade", class: "form-control form-control-lg", type: "text" %>
          <%= f.input :price, :label => "Preço" %>
          <%= f.input :start_date, :label => "Data Inicial" %>
          <%= f.input :end_date, :label => "Data Final" %>
          <div class="text-center mt-5"><%= f.submit 'Salvar Alterações', class: 'btn-medium' %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
